rule all:
    input:
        "../results/cleaned_data.csv",
        "../results/graph.png",
        "../results/README.md"

rule clean_data:
    input:
        "../data/banking_data.csv"
    output:
        "../results/cleaned_data.csv"
    shell:
        "python ../scripts/clean_data.py {input} {output}"

rule plot_data:
    input:
        "../results/cleaned_data.csv"
    output:
        "../results/graph.png"
    shell:
        "python ../scripts/plot_data.py {input} {output}"

rule write_readme:
    output:
        "../results/README.md"
    shell:
        "echo 'This is an auto-generated README for the banking project.' > {output}"
